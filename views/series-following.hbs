<div class="container">
    <div class="row" style="background-color: #212121;">
        <div class="col-sm-3">
            {{> memberSidebar}}
        </div>
        <div class="col-sm-9 user-container" style="background-color: #242424">
            <h1 class="title">Đang theo dõi</h1>
            {{#each seriesFollowing}}
            <div class="row">
                <div class="col-sm-2">
                    <a href="/series/{{this._id}}"><img src="{{this.thumbnail}}" alt=""></a>
                </div>
                <div class="col-sm-6">
                    <a href="/series/{{this._id}}"><h3>{{this.name}}</h3></a>
                </div>
                <div class="col-sm-4 align-right">
                    <a href="/members/unfollow/{{this._id}}" class="btn btn-secondary"><i class="fa fa-times"></i> Bỏ theo dõi</a>
                </div>
            </div>
            <hr>
            {{/each}}
        </div>
    </div>
</div>