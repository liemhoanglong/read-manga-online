          <!-- <li><a href="#3c" data-toggle="tab">Solution</a> </li> -->
        </ul>
        <div class="tab-content ">

          <div class="tab-pane active pt_20" id="2c">
            <form class="form-horizontal">
              <div id="review"></div>
              <!-- <h4 class="mt_20 mb_30">Write a review</h4> -->
              <div class="required">
                <div class="row">
                  <div class="col-sm-10">
                    <input name="text" value="" id="input-review" placeholder="Comment" class="form-control input-lg"
                      required="" type="text">
                  </div>
                  <div class="col-sm-2">
                    <button type="submit" class="btn btn-default btn-lg">Submit</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <ul class="comment-list mt_30">
          <li class="comment">
            <hr>
