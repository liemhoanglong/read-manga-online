<!-- =====  CONTAINER START  ===== -->
<div class="container">
    <h1 class="mt-4">Chapter: <span style="font-weight: 600;">{{chapter.name}}</span> </h1>
    <div class="row py-5">
        <div class="col-sm-12 d-flex align-content-stretch justify-content-center">
            <button class="btn-prev" {{#ifUnd prevChap}} disabled {{/ifUnd}} value="{{prevChap}}">
                Chapter trước
            </button>
            <div style="position: relative;">
                <select class="form-select" style="min-width: 30rem;" aria-label="Select chapter" id="chapter-top"
                    name="chapter-top">
                    {{#select chapter._id}}
                    <option value="" disabled selected>Chọn chapter</option>
                    {{#each chapterList}}
                    <option {{selectState this db.country}} value="{{this._id}}">{{this.name}}
                    </option>
                    {{/each}}
                    {{/select}}
                </select>
                <i class="fa fa-caret-down"
                    style="color: #a0a0a0;font-size: 24px;position: absolute;top: calc(50% - 12px);right: 12px;"
                    aria-hidden="true"></i>
            </div>
            <button class="btn-next" {{#ifUnd nextChap}} disabled {{/ifUnd}} value="{{nextChap}}">
                Chapter sau
            </button>
        </div>
    </div>
    <div class="row">
        {{#each images}}
        <div class="chapter-layout chapter-grid col-sm-12 ">
            <div class="item">
                <div class="chapter-thumb clearfix mb_30">
                    <div class="image chapter-imageblock">
                        {{!-- <img data-name="chapter_image" src="/image2db075968276fca03380f072dc167dd4.png"
                            alt="iPod Classic" class="img-responsive" /> --}}
                        <img loading="lazy" data-name="chapter_image" src={{this}} alt={{this}} title={{this}}
                            class="img-responsive" />
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row py-5">
        <div class="col-sm-12 d-flex align-content-stretch justify-content-center">
            <button class="btn-prev" {{#ifUnd prevChap}} disabled {{/ifUnd}} value="{{prevChap}}">
                Chapter trước
            </button>
            <div style="position: relative;">
                <select class="form-select" style="min-width: 30rem;" aria-label="Select chapter" id="chapter-bottom"
                    name="chapter-bottom">
                    {{#select chapter._id}}
                    <option value="" disabled selected>Chọn chapter</option>
                    {{#each chapterList}}
                    <option {{selectState this db.country}} value="{{this._id}}">{{this.name}}
                    </option>
                    {{/each}}
                    {{/select}}
                </select>
                <i class="fa fa-caret-down"
                    style="color: #a0a0a0;font-size: 24px;position: absolute;top: calc(50% - 12px);right: 12px;"
                    aria-hidden="true"></i>
            </div>
            <button class="btn-next" {{#ifUnd nextChap}} disabled {{/ifUnd}} value="{{nextChap}}">
                Chapter sau
            </button>
        </div>
    </div>
</div>

{{#section 'script'}}

<script type="application/javascript">

    $(function () {
        $("button.btn-next").click(function (event) {
            console.log("button .btn-next", $(this).attr("value"));
            const id = $(this).attr("value")
            if (window && id) {
                window.location.assign(`/chapters/${id}/detail`);
            }
        });
        $("button.btn-prev").click(function (event) {
            console.log("button .btn-prev", $(this).attr("value"));
            const id = $(this).attr("value")
            if (window && id) {
                window.location.assign(`/chapters/${id}/detail`);
            }
        });
        $("option.select-opt").click(function (event) {
